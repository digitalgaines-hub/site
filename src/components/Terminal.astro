---
// Terminal.astro - Animated terminal component
---

<div class="animated-terminal">
    <div class="terminal-window">
        <div class="terminal-header">
            <div class="terminal-controls">
                <span class="control control-close"></span>
                <span class="control control-minimize"></span>
                <span class="control control-maximize"></span>
            </div>
            <div class="terminal-title">dejon@digitalgaines:~</div>
        </div>
        <div class="terminal-body">
            <div class="terminal-content">
                <div class="command-line">
                    <span class="prompt">$</span>
                    <span class="command" id="animated-command"></span>
                    <span class="cursor" id="cursor">_</span>
                </div>
                <div class="output" id="output-line"></div>
            </div>
        </div>
    </div>
</div>

<style>
    .animated-terminal {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem 0;
    }

    .terminal-window {
        width: 100%;
        max-width: 700px;
        background: #1e1e1e;
        border-radius: 8px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        overflow: hidden;
    }

    .terminal-header {
        background: #323232;
        padding: 0.75rem 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .terminal-controls {
        display: flex;
        gap: 0.5rem;
    }

    .control {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .control-close {
        background: #ff5f56;
    }

    .control-minimize {
        background: #ffbd2e;
    }

    .control-maximize {
        background: #27c93f;
    }

    .terminal-title {
        color: #b4b4b4;
        font-size: 0.85rem;
        font-family: 'Courier New', monospace;
    }

    .terminal-body {
        padding: 1.5rem;
        min-height: 150px;
        font-family: 'Courier New', monospace;
        color: #00ff00;
        font-size: 0.95rem;
    }

    .command-line {
        margin-bottom: 0.5rem;
    }

    .prompt {
        color: #00ff00;
        margin-right: 0.5rem;
    }

    .command {
        color: #ffffff;
    }

    .cursor {
        color: #00ff00;
        animation: blink 1s infinite;
        margin-left: 2px;
    }

    @keyframes blink {
        0%, 50% { opacity: 1; }
        51%, 100% { opacity: 0; }
    }

    .output {
        color: #00d9ff;
        margin-left: 1rem;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .output.show {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .terminal-window {
            max-width: 100%;
        }

        .terminal-body {
            font-size: 0.85rem;
            padding: 1rem;
        }
    }
</style>

<script>
    function initTerminal() {
        const commands = [
    {
        command: "# Analyzing enterprise transformation requirements...",
        output: "→ Assessment complete: 3 key bottlenecks identified",
        delay: 2500
    },
    {
        command: "terraform init transformation-strategy",
        output: "✓ Enterprise transformation framework initialized",
        delay: 3500
    },
    {
        command: "# Evaluating customer experience platform needs...",
        output: "→ Target: 25,000 associates | Current gap: 78%",
        delay: 2500
    },
    {
        command: "kubectl scale deployment/cx-platform --replicas=25000",
        output: "✓ 25K associates empowered with AI-powered platform",
        delay: 4000
    },
    {
        command: "# Identifying language barriers in global operations...",
        output: "→ 47 languages detected | Translation latency: Critical",
        delay: 2500
    },
    {
        command: "ansible-playbook ai-translation.yml --extra-vars='impact=global'",
        output: "✓ Real-time translation: Breaking language barriers at scale",
        delay: 4000
    },
    {
        command: "# Calculating optimization opportunities...",
        output: "→ Significant cost reduction potential identified",
        delay: 2500
    },
    {
        command: "terraform apply cost-optimization --auto-approve",
        output: "✓ 8-figure annual savings achieved | ROI: 8X+",
        delay: 4000
    },
    {
        command: "# Planning multi-cloud enterprise architecture...",
        output: "→ Designing for: Enterprise-scale | 2K+ clients",
        delay: 2500
    },
    {
        command: "aws cloudformation deploy --stack-name multi-cloud-enterprise",
        output: "⣾ Deploying infrastructure... █████████░ 90%",
        delay: 2000,
        hasProgress: true
    },
    {
        command: "",
        output: "✓ Multi-cloud architecture operational | Zero downtime achieved",
        delay: 4000,
        skipCommand: true
    },
    {
        command: "helm install agile-transformation --set culture=innovation",
        output: "✓ 60% faster deployments | 100-point NPS increase",
        delay: 4000
    },
    {
        command: "# Analyzing customer experience metrics...",
        output: "→ First-call resolution: Below industry standard",
        delay: 2500
    },
    {
        command: "docker-compose up data-driven-cx --scale",
        output: "✓ 45% improvement in first-call resolution",
        delay: 4000
    }
];

        let currentIndex = 0;
        const commandElement = document.getElementById('animated-command');
        const outputElement = document.getElementById('output-line');
        const cursorElement = document.getElementById('cursor');

        if (!commandElement || !outputElement || !cursorElement) return;

        function typeCommand(text, callback) {
            if (!text) {
                // Skip typing if no command
                if (callback) callback();
                return;
            }
            
            commandElement.textContent = '';
            cursorElement.style.display = 'inline';
            let i = 0;
            
            const interval = setInterval(() => {
                if (i < text.length) {
                    commandElement.textContent += text.charAt(i);
                    i++;
                } else {
                    clearInterval(interval);
                    setTimeout(() => {
                        cursorElement.style.display = 'none';
                        if (callback) callback();
                    }, 500);
                }
            }, text.startsWith('#') ? 40 : 80 + Math.random() * 40); // Faster for thinking states
        }

        function showOutput(text, delay, hasProgress) {
            outputElement.textContent = text;
            outputElement.classList.add('show');
            
            if (hasProgress) {
                // Show progress bar briefly before continuing
                setTimeout(() => {
                    outputElement.classList.remove('show');
                    nextCommand();
                }, delay);
            } else {
                setTimeout(() => {
                    outputElement.classList.remove('show');
                    nextCommand();
                }, delay);
            }
        }

        function nextCommand() {
            currentIndex = (currentIndex + 1) % commands.length;
            
            setTimeout(() => {
                const cmd = commands[currentIndex];
                
                if (cmd.skipCommand) {
                    // Just show output without typing command
                    showOutput(cmd.output, cmd.delay, false);
                } else {
                    typeCommand(cmd.command, () => {
                        setTimeout(() => {
                            showOutput(cmd.output, cmd.delay, cmd.hasProgress);
                        }, 600);
                    });
                }
            }, 1200);
        }

        function start() {
            const firstCmd = commands[0];
            typeCommand(firstCmd.command, () => {
                setTimeout(() => {
                    showOutput(firstCmd.output, firstCmd.delay, firstCmd.hasProgress);
                }, 600);
            });
        }

        start();
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initTerminal);
    } else {
        initTerminal();
    }
</script>
