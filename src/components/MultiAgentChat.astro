---
// MultiAgentChat.astro
// Integrated multi-agent chat system with WebSocket backend
---

<section id="multi-agent-lab" style="background: var(--bg-secondary);">
  <div class="container">
    <div class="agent-dashboard">
      <!-- Left: Metrics Panel -->
      <div class="metrics-panel">
        <div class="metrics-title">DGX Spark Status</div>
        
        <!-- GPU Section -->
        <div class="metric-group">
          <div class="metric-label">GPU Utilization</div>
          <div class="metric-bar-container">
            <div class="metric-bar">
              <div class="metric-fill" id="gpu-fill" style="width: 0%"></div>
            </div>
            <div class="metric-value" id="gpu-value">---%</div>
          </div>
        </div>

       
        <!-- Temperature Section -->
        <div class="metric-group">
          <div class="metric-label">Temperature</div>
          <div class="metric-value-large" id="temp-value">--¬∞C</div>
        </div>

        <!-- Power Section -->
        <div class="metric-group">
          <div class="metric-label">Power Draw</div>
          <div class="metric-value-large" id="power-value">--W</div>
        </div>

        <!-- Status -->
        <div class="status-badge">
          <span class="status-dot"></span>
          <span class="status-text">Connecting...</span>
        </div>
      </div>

      <!-- Right: Multi-Agent Chat Panel -->
      <div class="chat-panel">
        <div class="chat-header">
          <span>Multi-Agent Chat System</span>
          <span class="agent-count">4 Specialized Agents</span>
        </div>

        <!-- Agent Selection Tiles -->
        <div class="agent-tiles">
          <button class="agent-tile" data-agent="rag">
            <div class="agent-icon">üîç</div>
            <div class="agent-name">Search Documents</div>
            <div class="agent-desc">RAG Agent</div>
          </button>
          <button class="agent-tile" data-agent="vision">
            <div class="agent-icon">üñºÔ∏è</div>
            <div class="agent-name">Image Processor</div>
            <div class="agent-desc">Vision Agent</div>
          </button>
          <button class="agent-tile" data-agent="code">
            <div class="agent-icon">üíª</div>
            <div class="agent-name">Code Generation</div>
            <div class="agent-desc">Coding Agent</div>
          </button>
          <button class="agent-tile" data-agent="chat">
            <div class="agent-icon">üí¨</div>
            <div class="agent-name">Chat</div>
            <div class="agent-desc">Local LLM</div>
          </button>
        </div>

        <!-- Chat Output -->
        <div class="chat-output" id="chat-output">
          <div class="chat-message system">
            <span class="message-icon">‚ö°</span>
            <span class="message-text">Welcome to DGX Spark Multi-Agent System. Select an agent above to begin.</span>
          </div>
        </div>

        <!-- Chat Input -->
        <div class="chat-input-wrapper">
          <input 
            type="text" 
            id="chat-input" 
            class="chat-input" 
            placeholder="Select an agent first..."
            disabled
          />
          <button id="send-btn" class="send-btn" disabled>
            <span>‚Üí</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --agent-primary: #00d9ff;
    --agent-success: #00ff88;
    --agent-bg-dark: #0a0e27;
    --agent-bg-darker: #050810;
    --agent-border: #1a2332;
  }

  #multi-agent-lab {
    padding: 0;
  }

  .agent-dashboard {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 0;
    max-width: 1200px;
    margin: 0 auto;
    background: linear-gradient(135deg, var(--agent-bg-darker) 0%, #0d1628 100%);
    border: 1px solid var(--agent-border);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 40px rgba(0, 217, 255, 0.1);
  }

  /* Metrics Panel */
  .metrics-panel {
    background: linear-gradient(180deg, rgba(0, 217, 255, 0.03) 0%, transparent 100%);
    padding: 20px;
    border-right: 1px solid var(--agent-border);
    font-family: 'Fira Code', monospace;
  }

  .metrics-title {
    font-size: 13px;
    font-weight: 600;
    color: var(--agent-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 18px;
  }

  .metric-group {
    margin-bottom: 20px;
  }

  .metric-label {
    font-size: 11px;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 6px;
  }

  .metric-bar-container {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .metric-bar {
    flex: 1;
    height: 6px;
    background: rgba(0, 217, 255, 0.1);
    border-radius: 3px;
    overflow: hidden;
    border: 1px solid var(--agent-border);
  }

  .metric-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--agent-primary), var(--agent-success));
    transition: width 0.3s ease;
  }

  .metric-value {
    font-size: 11px;
    color: var(--agent-primary);
    font-weight: 600;
    min-width: 45px;
    text-align: right;
  }

  .metric-value-large {
    font-size: 22px;
    font-weight: 700;
    color: var(--agent-primary);
    margin-top: 6px;
  }

  .status-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px;
    background: rgba(0, 255, 136, 0.08);
    border: 1px solid var(--agent-border);
    border-radius: 6px;
    margin-top: 20px;
  }

  .status-dot {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: var(--agent-success);
    box-shadow: 0 0 8px var(--agent-success);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
  }

  .status-text {
    font-size: 11px;
    color: var(--agent-success);
    font-weight: 600;
  }

  /* Chat Panel */
  .chat-panel {
    display: flex;
    flex-direction: column;
    background: var(--agent-bg-dark);
    height: 650px;
  }

  .chat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 14px 18px;
    background: linear-gradient(90deg, rgba(0, 217, 255, 0.05) 0%, transparent 100%);
    border-bottom: 1px solid var(--agent-border);
    font-size: 12px;
    color: var(--text-secondary);
    font-family: 'Fira Code', monospace;
  }

  .agent-count {
    color: var(--agent-primary);
    font-weight: 600;
  }

  .agent-tiles {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12px;
  padding: 16px;
    background: rgba(0, 217, 255, 0.02);
    border-bottom: 1px solid var(--agent-border);
  }

  .agent-tile {
    padding: 24px;
    background: rgba(0, 217, 255, 0.05);
    border: 1px solid var(--agent-border);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
  }

  .agent-tile:hover {
    background: rgba(0, 217, 255, 0.1);
    border-color: var(--agent-primary);
    transform: translateY(-2px);
  }

  .agent-tile.active {
    background: rgba(0, 217, 255, 0.15);
    border-color: var(--agent-primary);
  }

  .agent-icon {
    font-size: 32px;
    margin-bottom: 8px;
  }

  .agent-name {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 6px;
  }

  .agent-desc {
    font-size: 11px;
    color: var(--text-secondary);
  }

  .chat-output {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .chat-output::-webkit-scrollbar {
    width: 6px;
  }

  .chat-output::-webkit-scrollbar-thumb {
    background: var(--agent-border);
    border-radius: 3px;
  }

  .chat-message {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 10px;
    border-radius: 6px;
    font-size: 13px;
    font-family: 'Fira Code', monospace;
  }

  .chat-message.system {
    background: rgba(0, 255, 136, 0.08);
    border-left: 3px solid var(--agent-success);
  }

  .chat-message.user {
    background: rgba(0, 217, 255, 0.08);
    border-left: 3px solid var(--agent-primary);
  }

  .chat-message.assistant {
    background: rgba(0, 217, 255, 0.05);
    border-left: 3px solid var(--agent-primary);
  }

  .message-icon {
    font-size: 16px;
    flex-shrink: 0;
  }

  .message-text {
    color: var(--text-primary);
    line-height: 1.5;
    word-break: break-word;
    white-space: pre-wrap;
  }

  .chat-input-wrapper {
    display: flex;
    gap: 8px;
    padding: 14px;
    background: linear-gradient(90deg, rgba(0, 217, 255, 0.02) 0%, transparent 100%);
    border-top: 1px solid var(--agent-border);
  }

  .chat-input {
    flex: 1;
    padding: 10px 14px;
    background: rgba(0, 217, 255, 0.05);
    border: 1px solid var(--agent-border);
    border-radius: 6px;
    color: var(--text-primary);
    font-size: 13px;
    font-family: 'Fira Code', monospace;
    outline: none;
    transition: all 0.2s ease;
  }

  .chat-input:focus {
    border-color: var(--agent-primary);
    background: rgba(0, 217, 255, 0.08);
  }

  .chat-input:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .send-btn {
    padding: 10px 18px;
    background: linear-gradient(90deg, var(--agent-primary), var(--agent-success));
    border: none;
    border-radius: 6px;
    color: #000;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .send-btn:hover:not(:disabled) {
    transform: scale(1.05);
  }

  .send-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (max-width: 1024px) {
    .agent-dashboard {
      grid-template-columns: 1fr;
    }

    .metrics-panel {
      border-right: none;
      border-bottom: 1px solid var(--agent-border);
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 16px;
    }

    .metric-group {
      margin-bottom: 0;
    }

    .status-badge {
      grid-column: 1 / -1;
      margin-top: 0;
    }

    .agent-tiles {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  const API_BASE = 'https://spark.digitalgaines.com';
  const WS_BASE = 'wss://spark.digitalgaines.com';
  
  let selectedAgent = null;
  let isProcessing = false;
  let chatId = null;
  let ws = null;

  // DOM elements
  const chatOutput = document.getElementById('chat-output');
  const chatInput = document.getElementById('chat-input');
  const sendBtn = document.getElementById('send-btn');
  const agentTiles = document.querySelectorAll('.agent-tile');

  // Metrics elements
  const gpuFill = document.getElementById('gpu-fill');
  const gpuValue = document.getElementById('gpu-value');
  
  const tempValue = document.getElementById('temp-value');
  const powerValue = document.getElementById('power-value');
  const statusDot = document.querySelector('.status-dot');
  const statusText = document.querySelector('.status-text');

  // Initialize chat session
  async function initChat() {
    try {
      console.log('Attempting to connect to:', `${API_BASE}/chat_id`);
      const response = await fetch(`${API_BASE}/chat_id`, { 
        method: 'GET',
        headers: { 'Content-Type': 'application/json' }
      });
      console.log('Response status:', response.status);
      if (!response.ok) throw new Error(`Failed to create chat session: ${response.status}`);
      
      const data = await response.json();
      console.log('Chat ID received:', data.chat_id);
      chatId = data.chat_id;
      
      connectWebSocket();
    } catch (error) {
      console.error('Init chat error:', error);
      addMessage('system', '‚ö†Ô∏è', `Failed to connect: ${error.message}`);
    }
  }

  // Connect WebSocket
  function connectWebSocket() {
    if (!chatId) return;

    ws = new WebSocket(`${WS_BASE}/ws/chat/${chatId}`);

    ws.onopen = () => {
      addMessage('system', '‚úì', 'Connected to multi-agent system.');
    };

    ws.onmessage = (event) => {
      const data = JSON.parse(event.data);
      handleWebSocketMessage(data);
    };

    ws.onerror = () => {
      addMessage('system', '‚ö†Ô∏è', 'WebSocket error. Reconnecting...');
    };

    ws.onclose = () => {
      addMessage('system', '‚ö†Ô∏è', 'Connection closed.');
    };
  }

  // Handle WebSocket messages
  function handleWebSocketMessage(data) {
    const msg = data;
    const type = msg.type;
    const text = msg.data || msg.token || msg.content || '';

    console.log('WebSocket message:', type, text.substring(0, 100));

    switch (type) {
      case 'history':
        // Initial history loaded
        break;
      
      case 'token':
      case 'ai_token':
        // Streaming token from AI
        if (text) {
          // Append to last assistant message or create new one
          const lastMsg = chatOutput.lastElementChild;
          if (lastMsg && lastMsg.classList.contains('assistant')) {
            const textSpan = lastMsg.querySelector('.message-text');
            if (textSpan) textSpan.textContent += text;
          } else {
            addMessage('assistant', 'ü§ñ', text);
          }
        }
        break;
      
      case 'end':
      case 'complete':
        // Response complete
        isProcessing = false;
        sendBtn.disabled = false;
        chatInput.disabled = false;
        chatInput.focus();
        break;
      
      case 'error':
        addMessage('system', '‚ö†Ô∏è', `Error: ${text}`);
        isProcessing = false;
        sendBtn.disabled = false;
        chatInput.disabled = false;
        break;
      
      default:
        // Any other message with content
        if (text) {
          addMessage('assistant', 'ü§ñ', text);
          isProcessing = false;
          sendBtn.disabled = false;
          chatInput.disabled = false;
        }
    }
  }

  // Agent selection
  agentTiles.forEach(tile => {
    tile.addEventListener('click', () => {
      agentTiles.forEach(t => t.classList.remove('active'));
      tile.classList.add('active');
      
      selectedAgent = tile.getAttribute('data-agent');
      chatInput.disabled = false;
      sendBtn.disabled = false;
      chatInput.placeholder = 'Type your message...';
      chatInput.focus();

      addMessage('system', '‚úì', `${tile.querySelector('.agent-name').textContent} selected.`);
    });
  });

  // Send message
  async function sendMessage() {
    if (!selectedAgent || isProcessing || !chatInput.value.trim() || !ws) return;

    const message = chatInput.value.trim();
    chatInput.value = '';
    
    addMessage('user', 'üë§', message);
    isProcessing = true;
    sendBtn.disabled = true;
    chatInput.disabled = true;

    // Send via WebSocket - backend expects { message: "text" }
    ws.send(JSON.stringify({
      message: message
    }));
  }

  sendBtn.addEventListener('click', sendMessage);
  chatInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  });

  // Add message to chat
  function addMessage(type, icon, text) {
    const msg = document.createElement('div');
    msg.className = `chat-message ${type}`;
    msg.innerHTML = `
      <span class="message-icon">${icon}</span>
      <span class="message-text">${escapeHtml(text)}</span>
    `;
    chatOutput.appendChild(msg);
    chatOutput.scrollTop = chatOutput.scrollHeight;
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

 // Metrics polling
  async function pollMetrics() {
    try {
      const response = await fetch(`${API_BASE}/status`);
      if (!response.ok) throw new Error('Offline');
      
      const data = await response.json();
      updateMetrics(data);
      setOnline();
    } catch (error) {
      setOffline();
    }
  }

  function updateMetrics(data) {
    const gpu = data.gpu;
    
    gpuFill.style.width = `${gpu.gpu_utilization}%`;
    gpuValue.textContent = `${gpu.gpu_utilization.toFixed(0)}%`;
    
        
    tempValue.textContent = `${gpu.temperature_c.toFixed(0)}¬∞C`;
    powerValue.textContent = `${gpu.power_draw_w.toFixed(0)}W`;
  }

  function setOnline() {
    statusDot.style.background = '#00ff88';
    statusText.textContent = 'üü¢ Online';
  }

  function setOffline() {
    statusDot.style.background = '#ff4444';
    statusText.textContent = 'üî¥ Offline';
  }

  // Initialize
  initChat();
  pollMetrics();
  setInterval(pollMetrics, 3000);

  // Initialize
  initChat();
  setMetricsOffline();
</script>